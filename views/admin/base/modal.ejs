<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="aymentModalLabel" aria-hidden="true" id="clientPayment">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="aymentModalLabel">Payment</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="paymentError"></div>
                <div class="form-group row">
                    <label for="userPayment" class="col-sm-2 col-form-label">Payment</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="userPayment" placeholder="Payment">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" id="paymentButton">Pay</button>
            </div>
        </div>
    </div>
</div>

