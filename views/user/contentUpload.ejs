<%- include('base/base_header.ejs') %>
<div class="outer-w3-agile col-xl mt-3">
    <h4 class="tittle-w3-agileits mb-4">
        <%=title%>
    </h4>
    <form action="<%=uploadContentForm%>" method="post" id="uploadContentForm">
        <div id="message"></div>
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        <div class="form-group row">
            <label for="appId" class="col-sm-2 col-form-label">App Name</label>
            <div class="col-sm-10">
                <select class="form-control" name="appId" id="appId">
                    <option value="">Select App Name</option>
                    <% appList.forEach((item) => { %>
                    <option value="<%=item._id%>">
                        <%=item.app_name%>
                    </option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="messageDate" class="col-sm-2 col-form-label">Message Receiving Date</label>
            <div class="col-sm-10">
                <input type="date" name="messageDate" class="form-control" id="messageDate">
            </div>
        </div>
        <div class="form-group row">
            <label for="messageTime" class="col-sm-2 col-form-label">Message Receiving Time</label>
            <div class="col-sm-10">
                <input type="time" name="messageTime" class="form-control" id="messageTime">
            </div>
        </div>
        <div class="form-group row">
            <label for="messageContent" class="col-sm-2 col-form-label">Message</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="messageContent" name="messageContent" rows="3"></textarea>
            </div>
        </div>
        <div style="text-align: center;">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
<%- include('base/base_footer.ejs') %>
<script type="text/javascript" src="/js/user/uploadContent.js"></script>
<%- include('base/close_footer.ejs') %>